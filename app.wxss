/**app.wxss**/

page {
  width: 100vw;
  height: 100%;
  -webkit-font-smoothing: antialiased;
  font-family: "PingHei", "Helvetica Neue", "Helvetica", "Arial", "Verdana", "sans-serif";
  font-size: 28rpx;
  background: #f4f6f9;
}

view {
  box-sizing: border-box;
}

.container {
  min-height: 100%;
  padding-top: 1rpx;
}

.loading-wrap {
  width: 100%;
  height: 100%;
  background-color: #fff;
}

.tips {
  width: 100%;
  color: #333;
  text-align: center;
  font-size: 15px;
  padding-top: 20rpx;
}

.hover-class {
  background-color: #efefef !important;
}

/* 文字溢出 */

.text-flow {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.multi-two-text-flow {
  overflow: hidden;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  text-overflow: ellipsis;
  -webkit-box-orient: vertical;
  word-break: break-all;
}

/* 通用轮播 */

.swiper-images-wrap {
  /* height: 400rpx; */
}

.order-img-item {
  width: 100vw;
  /* height: 400rpx; */
}

/* flex 通用  */

.flex-1 {
  flex: 1;
}

.flex-column {
  display: flex;
  flex-direction: column;
}

.flex-wrap {
  position: relative;
  flex: 1;
}

.flex-row {
  display: flex;
  flex-direction: row;
}

.flex-center {
  justify-content: center;
  align-items: center;
}

.flex-bug {
  position: absolute;
  width: 100%;
  height: 100%;
  overflow: hidden;
}

.scroll {
  height: 100%;
  background-color: transparent;
  position: relative;
}

.block {
  display: block !important;
}

.between {
  justify-content: space-between !important;
  /* align-items: center; */
}

.around {
  justify-content: space-around !important;
  /* align-items: center; */
}

.center {
  align-items: center !important;
}

.wrap {
  flex-wrap: wrap;
}

.end {
  justify-content: flex-end;
}

/* input */

.input-label {
  display: flex;
}

.input-title {
  width: 180rpx;
  font-size: 34rpx;
}

.input-view {
  flex: 1;
  color: #333;
}

.text-overflow {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.margin10-auto {
  margin: 10rpx auto;
}

.margin20-auto {
  margin: 20rpx auto;
}

.radius10 {
  border-radius: 10rpx;
}

/* icon */

.book-icon {
  width: 18px;
  height: 22px;
}

.people-icon, .address-icon, .phone-icon {
  width: 13px;
  height: 15px;
}

.service-icon {
  width: 21px;
  height: 23px;
}

.arrow-down-icon {
  width: 13px;
  height: 10px;
}

.more-icon {
  width: 10px;
  height: 15px;
}

.loading-gif {
  width: 30px;
  height: 30px;
}

.pad30 {
  padding: 0 30rpx;
}

.pad20 {
  padding: 0 20rpx;
}

.no-data {
  /* line-height: 80rpx; */
  height: 60vh;
  color: #999;
  font-size: 26rpx;
  text-align: center;
  background-color: #fff;
  display: block;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  border-top: 1rpx solid #f7f7f7;
  /* padding-bottom: 200rpx; */
}

.no-data image {
  width: 179rpx;
  display: block;
  margin: 0 auto 20rpx;
  padding-top: 100rpx;
}

.rightIcon {
  width: 12rpx;
  height: 22rpx;
}

.hide {
  display: none !important;
}

.show {
  display: block !important;
}

button[disabled] {
  background-color: #d8995b !important;
  color: #fff !important;
}
